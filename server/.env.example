# Server
PORT=5000

# MySQL database credentials
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=mirai

# Auth
JWT_SECRET=change-me
JWT_EXPIRES_IN=1h

# AI Configuration
AI_PROVIDER=ollama          # 'ollama' ou 'gemini'
GEMINI_API_KEY=             # Chave de API do Google Gemini (obrigat√≥ria se AI_PROVIDER=gemini)
GEMINI_MODEL=gemini-2.5-flash

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_TEXT_MODEL=llama3.2
OLLAMA_VISION_MODEL=llava
OLLAMA_TIMEOUT=30000        # 30 segundos

# Optional: serve React build statically via Express (useful for shared hosting)
SERVE_FRONT=true
# FRONT_DIST_PATH can override default ../dist path relative to compiled server
# FRONT_DIST_PATH=/home/usuario/apps/mirai/dist
